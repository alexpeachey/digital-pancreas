!!! 5
%html
  %head
    %title= yield(:title) || 'BSSM'
    %meta{"http-equiv" => "Content-Type", :content => "text/html; charset=utf-8"}
    = stylesheet_link_tag 'application'
    = csrf_meta_tag
    = yield(:head)
  %body
    #container
      -flash.each do |name, msg|
        = content_tag :div, msg, :class => "#{name}"
      #content
        =yield
    = javascript_include_tag 'application'
